{
  "require": {
    "barrelstrength/sprout-fields": "^3.2",
    "craftcms/cms": "^3.0.0",
    "craftcms/redactor": "^2.3",
    "fortrabbit/craft-copy": "^1.0.0-RC4",
    "misterbk/mix": "^1.5",
    "nystudio107/craft-imageoptimize": "1.5.4",
    "nystudio107/craft-minify": "^1.2",
    "verbb/super-table": "^2.1",
    "vlucas/phpdotenv": "^2.4.0"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
