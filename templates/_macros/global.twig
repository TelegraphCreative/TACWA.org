{# Image #}
{% macro image(source, class) %}
    {# Source #}
    {% if class %}
        {% set classes = class %}
    {% else %}
        {% set classes = '' %}
    {% endif %}
    
    {% if source|length %}
        <figure class="image {{ classes }}">
            <img data-src="{{ source.src() }}"
                    data-srcset="{{ source.srcset() }}"
                    sizes="100vw"
                    class="lazyload" />
        </figure>
    {% else %}
        {# Placeholder #}
        <figure class="image {{ classes }}">
        </figure>
    {% endif %}
{% endmacro %}

