{# Image #}
{% macro image(source, class) %}
    {# Source #}
    {% if class %}
        {% set classes = class %}
    {% else %}
        {% set classes = '' %}
    {% endif %}

    {% if source|length %}
        <figure class="image {{ classes }}">
            <img data-src="{{ source.src() }}"
                    data-srcset="{{ source.srcset() }}"
                    sizes="100vw"
                    class="lazyload" />
        </figure>
    {% else %}
        {# Placeholder #}
        <figure class="image {{ classes }}">
        </figure>
    {% endif %}
{% endmacro %}


{#   Buttons   #}
{% macro btn(source, classes, text) %}
   <a href="{{ source }}" class="{{ classes }}">{{ text }}</a>
{% endmacro %}
{% macro btnButton(classes, text) %}
   <button class="{{ classes }}">{{ text }}</button>
{% endmacro %}


{#   Links   #}
{% macro link(source, text, classes) %}
   <a href="{{ source }}" class="{{ classes }}">
      {{ text }}
      <svg class="fill-current  |  h-3 w-2  |  ml-2 mt-px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 10 16">
         <path d="M1.9 0L0 1.88 6.18 8 0 14.12 1.9 16 10 8 1.9 0z"/>
      </svg>
   </a>
{% endmacro %}


