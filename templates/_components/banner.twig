{#   Banners: Standard & Centered   #}
{% import '_macros/global' as global %}

<div class="banner{% if classes is defined %} | {{ classes }}{% endif %}">
   <div class="container">
      <div class="banner__container">
         {#   Content   #}
         <div class="banner__content">
            <h2 class="banner__content__heading">{{ heading }}</h2>
            <p class="banner__content__copy">{{ copy }}</p>
         </div>

         {#   Action   #}
         {% if button %}
            <div class="banner__action">
                {% if classes == "--centered" %}
                {{ global.linkIt(button, 'btn --secondary --outline') }}
                {% else %}
                {{ global.linkIt(button, 'btn --primary --outline') }}
                {% endif %}
            </div>
         {% endif %}
      </div>
   </div>
</div>